(
    (
        EXISTS (
            SELECT 1
            FROM profiles
            WHERE
                (profiles.id = auth.uid())
                AND (profiles.user_role = 'restaurante'::text)
                AND (profiles.restaurant_id = NEW.restaurant_id)
        )
    )
    OR
    (
        EXISTS (
            SELECT 1
            FROM profiles
            WHERE
                (profiles.id = auth.uid())
                AND (profiles.user_role = 'admin'::text)
        )
    )
)